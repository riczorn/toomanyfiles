<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5" method="upgrade">
	<name>COM_TOOMANYFILES_PRO</name>
  <creationDate>2-Jun-2014</creationDate>
  <author>Riccardo Zorn</author>
  <authorEmail>support@fasterjoomla.com</authorEmail>
  <authorUrl>http://www.fasterjoomla.com</authorUrl>
  <copyright>Riccardo Zorn 2013-2014</copyright>
  <license>GPL</license>
	<version>1.5.9</version>
	<description>COM_TOOMANYFILES_XML_DESC</description>

    <install> 
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> 
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

	<administration>
   		<menu img="components/com_toomanyfiles/assets/images/logo16.png">COM_TOOMANYFILES_PRO</menu>

 		<files folder="admin">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>README.php</filename>
			<filename>toomanyfiles.php</filename>
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>elements</folder>
			<folder>helpers</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
 	</administration>
	
	<updateservers>
		<!-- Note: No spaces or linebreaks allowed between the server tags -->
		<server type="extension" priority="1" name="TooManyFiles Update Site">http://www.fasterjoomla.com/files/extensions/toomanyfiles.xml</server>
	</updateservers>
</extension>

